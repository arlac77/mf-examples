{
  "name": "mf-examples",
  "version": "1.3.3",
  "publishConfig": {
    "access": "public"
  },
  "description": "examples entry page",
  "keywords": [
    "example",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "lint": "npm run lint:css",
    "lint:css": "stylelint ./src/*.css",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "mf-hosting-frontend": "^1.5.2",
    "mf-styling": "^1.7.37",
    "npm-pkgbuild": "^11.0.0",
    "semantic-release": "^20.0.2",
    "stylelint": "^14.16.0",
    "stylelint-config-standard": "^29.0.0",
    "vite": "^4.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/mf-examples.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/mf-examples/issues"
  },
  "homepage": "https://github.com/arlac77/mf-examples#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/"
    },
    "depends": {
      "mf-styling": ">=1.7.32",
      "svelte-command": ">=1.1.25",
      "svelte-common": ">=4.21.3",
      "svelte-entitlement": ">=1.2.39",
      "svelte-guard-history-router": ">=5.5.13",
      "svelte-log-view": ">=4.2.14",
      "svelte-session-manager": ">=2.0.11",
      "svelte-websocket-store": ">=1.1.33"
    },
    "http.path": "${http.base.path}",
    "install.dir": "${install.base.dir}",
    "frontend": true,
    "example": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-pacman",
      "arlac77/template-vite",
      "arlac77/template-web-app"
    ]
  }
}
