{
  "name": "mf-examples",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "examples entry page",
  "keywords": [
    "example",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "lint": "npm run lint:css",
    "lint:css": "stylelint ./src/*.css",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "npm-pkgbuild": "^10.15.20",
    "semantic-release": "^19.0.5",
    "stylelint": "^14.16.0",
    "stylelint-config-standard": "^29.0.0",
    "vite": "^4.0.0",
    "mf-hosting": "^1.8.0",
    "mf-styling": "^1.7.32"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/mf-examples.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/mf-examples/issues"
  },
  "homepage": "https://github.com/arlac77/mf-examples#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": {
        "base": "build"
      },
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf",
      "depends": {
        "mf-styling": "^1.7.32",
        "svelte-command": "^1.1.25",
        "svelte-common": "^4.21.3",
        "svelte-entitlement": "^1.2.39",
        "svelte-guard-history-router": "^5.5.13",
        "svelte-log-view": "^4.2.14",
        "svelte-session-manager": "^2.0.11",
        "svelte-websocket-store": "^1.1.33"    
      }
    },
    "groups": "examples",
    "http.path": "${http.base.path}",
    "install.dir": "${install.base.dir}"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "Debian Package"
            },
            {
              "path": "dist/*.pkg.*",
              "label": "Arch Linux Package"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-pacman",
      "arlac77/template-vite",
      "arlac77/template-web-app"
    ]
  }
}
