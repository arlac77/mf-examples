{
  "name": "mf-examples",
  "version": "0.0.0-semantic-release",
  "keywords": [
    "web"
  ],
  "scripts": {
    "lint": "npm run lint:css",
    "lint:css": "stylelint ./src/*.css"
  },
  "devDependencies": {
    "npm-pkgbuild": "^10.11.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "semantic-release": "^19.0.3",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^26.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/mf-examples.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/mf-examples/issues"
  },
  "homepage": "https://github.com/arlac77/mf-examples#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": {
        "base": "public/"
      },
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf"
    },
    "install.sub.dir": "/frontend/"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --verbose"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-pacman",
      "arlac77/template-web-app"
    ]
  }
}